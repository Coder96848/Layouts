<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_news_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/leaf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Спонсоры отремонтируют\nшколу-интернат">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/fragment_news_details_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_news_details_tab_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_news_details_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_news_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:textAppearance="@style/HelperText.NewsName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fragment_news_details_scroll_view_image_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:src="@drawable/icon_calendar_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_news_name"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:layout_marginStart="5dp"
                android:text="@string/date_1"
                android:textColor="@color/grey"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/fragment_news_details_scroll_view_image_calendar"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_news_name" />

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black_60"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_image_calendar" />

            <ImageView
                android:id="@+id/fragment_news_details_scroll_view_image_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:src="@drawable/nav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_organization"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:layout_marginStart="@dimen/ten_dp"
                android:textAppearance="@style/HelperText.Body3"
                app:layout_constraintStart_toEndOf="@+id/fragment_news_details_scroll_view_image_nav"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_organization" />

            <ImageView
                android:id="@+id/fragment_news_details_scroll_view_image_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="31dp"
                android:src="@drawable/phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_image_nav"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:layout_marginStart="@dimen/ten_dp"
                android:text="+7 (937) 037 37-73\n+7 (937) 016 16-16"
                android:textAppearance="@style/HelperText.Body3"
                app:layout_constraintStart_toEndOf="@+id/fragment_news_details_scroll_view_image_phone"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_nav" />

            <ImageView
                android:id="@+id/fragment_news_details_scroll_view_image_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="31dp"
                android:src="@drawable/mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_image_phone"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginTop="@dimen/nineteen_dp"
                android:text="@string/you_have_a_questions"
                android:textAppearance="@style/HelperText.Body3"
                app:layout_constraintStart_toEndOf="@+id/fragment_news_details_scroll_view_image_mail"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_phone" />

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/six_dp"
                android:layout_marginTop="@dimen/nineteen_dp"
                android:text="@string/link_to_us"
                android:textAppearance="@style/HelperText.LinkText"
                app:layout_constraintStart_toEndOf="@+id/fragment_news_details_scroll_view_text_view_mail"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_phone" />

            <ImageView
                android:id="@+id/fragment_news_details_scroll_view_image_detail_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:src="@drawable/cardimage_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_image_mail"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:id="@+id/fragment_news_details_scroll_view_image_detail_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:src="@drawable/cardimage_2"
                app:layout_constraintStart_toEndOf="@+id/fragment_news_details_scroll_view_image_detail_1"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_image_mail"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:id="@+id/fragment_news_details_scroll_view_image_detail_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:src="@drawable/cardimage_3"
                app:layout_constraintStart_toEndOf="@+id/fragment_news_details_scroll_view_image_detail_1"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_image_detail_2"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_detail_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:textAppearance="@style/HelperText.Body3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_image_detail_1" />

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_detail_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:text="При этом финансово поучаствовать в помощи детям. При этом финансово поучаствовать в помощи детям."
                android:textAppearance="@style/HelperText.Body3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_detail_1" />

            <TextView
                android:id="@+id/fragment_news_details_scroll_view_text_view_link_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:paddingBottom="30dp"
                android:text="Перейти на сайт организации"
                android:textAppearance="@style/HelperText.LinkText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_detail_2" />

            <LinearLayout
                android:id="@+id/fragment_news_details_image_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cool_grey"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_news_details_scroll_view_text_view_link_organization">

                <ImageView
                    android:id="@+id/news_details_image_avatar_1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="@dimen/twenty_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:src="@drawable/avatar_3"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/news_details_image_avatar_2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:src="@drawable/avatar_4"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/news_details_image_avatar_3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:src="@drawable/avatar_2"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/news_details_image_avatar_4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:src="@drawable/avatar_5"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/news_details_image_avatar_5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:src="@drawable/avatar_1"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/news_details_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginBottom="27dp"
                    android:text="+102"
                    android:textAppearance="@style/HelperText.SearchEditText" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_news_details_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/news_details_button_help_stuff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/twenty_six_dp"
            android:paddingBottom="5dp"
            android:paddingEnd="@dimen/twenty_six_dp"
            android:paddingTop="9dp"
            android:drawableTop="@drawable/shirt"
            android:textAppearance="@style/HelperText.TabLayout2"
            android:text="@string/help_stuff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/news_details_separator_1"
            android:layout_width="@dimen/one_dp"
            android:layout_height="match_parent"
            android:background="@drawable/separator_1"
            app:layout_constraintStart_toEndOf="@id/news_details_button_help_stuff"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/news_details_button_help_volunteer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/sixteen_dp"
            android:paddingBottom="5dp"
            android:paddingEnd="@dimen/sixteen_dp"
            android:paddingTop="9dp"
            android:drawableTop="@drawable/hands"
            android:text="@string/help_volunteer"
            android:textAppearance="@style/HelperText.TabLayout2"
            app:layout_constraintStart_toEndOf="@+id/news_details_separator_1"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/news_details_separator_2"
            android:layout_width="@dimen/one_dp"
            android:layout_height="match_parent"
            android:background="@drawable/separator_1"
            app:layout_constraintStart_toEndOf="@+id/news_details_button_help_volunteer"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/news_details_button_help_prof"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/twenty_four_dp"
            android:paddingBottom="5dp"
            android:paddingEnd="@dimen/twenty_four_dp"
            android:paddingTop="9dp"
            android:drawableTop="@drawable/tools"
            android:text="@string/help_prof"
            android:textAppearance="@style/HelperText.TabLayout2"
            app:layout_constraintStart_toEndOf="@+id/news_details_separator_2"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/news_details_separator_3"
            android:layout_width="@dimen/one_dp"
            android:layout_height="match_parent"
            android:background="@drawable/separator_1"
            app:layout_constraintStart_toEndOf="@+id/news_details_button_help_prof"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/news_details_button_help_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="22dp"
            android:paddingBottom="5dp"
            android:paddingEnd="22dp"
            android:paddingTop="9dp"
            android:drawableTop="@drawable/coins"
            android:text="@string/help_money"
            android:textAppearance="@style/HelperText.TabLayout2"
            app:layout_constraintStart_toEndOf="@+id/news_details_separator_3"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>