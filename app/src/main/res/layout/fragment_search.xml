<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/HelperAppTheme">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/leaf"
        app:menu="@menu/search_toolbar_menu"
        app:title="@string/search_text"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_search_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/fragment_search_view_pager_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/leaf"
            app:tabTextColor="@color/white_70"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorColor="@color/macaroni_and_cheese"/>

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>