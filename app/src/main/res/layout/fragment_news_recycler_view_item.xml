<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/news_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/news_item_card_view_image_view_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/four_dp"
                android:layout_marginTop="@dimen/four_dp"
                android:layout_marginEnd="@dimen/four_dp"
                android:foreground="@drawable/fade"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,UnusedAttribute"/>

            <TextView
                android:id="@+id/news_item_card_view_text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_nine_dp"
                android:layout_marginTop="@dimen/two_hundred_twelve_dp"
                android:layout_marginEnd="@dimen/thirty_eight_dp"
                android:gravity="center_horizontal"
                android:textAppearance="@style/HelperText.NewsName"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/news_item_card_view_image_view_decor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/one_hundred_sixteen_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_marginEnd="@dimen/one_hundred_fifteen_dp"
                android:src="@drawable/decor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/news_item_card_view_text_view_name"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/news_item_card_view_text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_six_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginEnd="@dimen/twenty_six_dp"
                android:gravity="center_horizontal"
                android:textAppearance="@style/HelperText.Body3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/news_item_card_view_image_view_decor" />

            <Button
                android:id="@+id/news_item_card_view_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thirty_two_dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textAppearance="@style/HelperText.Button2"
                app:cornerRadius="0dp"
                app:icon="@drawable/icon_calendar"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/four_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>