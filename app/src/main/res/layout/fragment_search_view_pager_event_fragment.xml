<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_search_view_pager_event_fragment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_search_view_pager_event_fragment_text_view_layout_margin_start"
        android:layout_marginTop="@dimen/fragment_search_view_pager_event_fragment_text_view_layout_margin_top"
        android:layout_marginEnd="@dimen/fragment_search_view_pager_event_fragment_text_view_layout_margin_end"
        android:layout_marginBottom="@dimen/fragment_search_view_pager_event_fragment_text_view_layout_margin_bottom"
        android:textSize="@dimen/fragment_search_view_pager_event_fragment_text_view_text_size"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black__54"
        android:lineSpacingExtra="@dimen/fragment_search_view_pager_event_fragment_text_view_line_spacing_extra"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_search_view_pager_event_fragment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_recycler_view"/>

</LinearLayout>